# Django Configuration
SECRET_KEY=django-insecure-change-this-to-a-secure-random-key-in-production
DEBUG=False
ALLOWED_HOSTS=your-domain.kuberns.com,www.your-domain.kuberns.com,localhost

# Database Configuration (PostgreSQL recommended for production)
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-domain.kuberns.com,https://www.your-domain.kuberns.com

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Static and Media Files (for cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/django/app.log

# Performance Settings
CONN_MAX_AGE=60

# kuberns.com Specific Settings
PORT=8000
HOST=0.0.0.0
