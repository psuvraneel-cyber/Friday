# Django Configuration
SECRET_KEY=django-insecure-change-this-to-a-secure-random-key-in-production
DEBUG=False
ALLOWED_HOSTS=.onrender.com,your-app-name.onrender.com,localhost

# CSRF Trusted Origins (required for Render deployment)
CSRF_TRUSTED_ORIGINS=https://your-app-name.onrender.com

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Security Settings
SECURE_SSL_REDIRECT=True

# Port Configuration (Render sets this automatically)
PORT=8000
